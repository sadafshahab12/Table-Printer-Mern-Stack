<%- include("partials/title") %>
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <h1 class="text-center mb-4">Multiplication Table for <%= table %></h1>
      <p class="lead text-center">From: <strong><%= from %></strong> To: <strong><%= to %></strong></p>

      <table class="table table-bordered table-hover table-striped mt-4 shadow-sm">
        <thead class="table-dark">
          <tr>
            <th scope="col">Multiplier</th>
            <th scope="col">Product</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = from; i <= to; i++) { %>
            <tr>
              <td><%= table %> Ã— <%= i %></td>
              <td><%= table * i %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
